---
title: "New Bulk Search"
---

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">New Bulk Search</h4>
                </div>
                <form action="">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label for="listName">List Name</label>
                                    <input class="form-control" id="listName" placeholder="List Name" type="text">
                                </div>
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="createDomainList">Create Domain list</label>
                                            <textarea class="form-control" id="createDomainList" rows="3" placeholder="eg. apple.com"></textarea>
                                            <small id="createDomainListHelpBlock" class="form-text text-muted mb-2">
                                                The domain name should be one per line.
                                            </small>
                                        </div>


                                        <div class="form-group">
                                            <label class="col-form-label mr-3">Email Type</label>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" id="customCheckboxInline1" checked type="checkbox">
                                                <label class="custom-control-label" for="customCheckboxInline1">Generic</label>
                                            </div>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" id="customCheckboxInline2" checked type="checkbox">
                                                <label class="custom-control-label" for="customCheckboxInline2">Personal</label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="resultsPerDomain">Results per Domain</label>
                                            <select id="resultsPerDomain" class="custom-select">
                                                <option>10</option>
                                                <option>50</option>
                                                <option>100</option>
                                            </select>
                                        </div>

                                    </div>
                                    <div class="col-md-2 text-center"><h5><span class="badge badge-round badge-dark mt-3 p-3">OR</span></h5></div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label for="uploadFile">Create by Uploading file</label>
                                            <div class="custom-file">
                                                <input class="custom-file-input" id="customFile" type="file">
                                                <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                            <div class="dropzone mt-3" data-plugin="dropzone" id="myDropzone">
                                                <div class="fallback">
                                                    <input name="file" type="file" multiple/>
                                                </div>
                                            </div>
                                            <small id="uploadFileHelpBlock" class="form-text text-muted">
                                                chose .csv or .txt file with domain names.
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="btn-group ml-auto">
                            <a class="btn btn-outline-info" href="#" role="button">Cancel</a>
                            <button type="button" class="btn btn-info"><i class="icon-plus mr-1"></i>Create</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>


